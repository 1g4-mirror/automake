# Check that when the POTS primary is used, AM_POT_TOOLS must be invoked,
# otherwise a warning occurs.

. ./defs || Exit 1

set -e

cat > Makefile.am << 'END'
locale_POTS = posub/foo-bar.pot
posub_foo_bar_pot_SOURCES =
END

cp configure.in configure.in.bak
cat >> configure.in << 'END'
AC_OUTPUT
END

$ACLOCAL

# Check that there is a warning about the missing AM_POT_TOOLS invocation.

AUTOMAKE_fails -Werror
grep 'POTS.*AM_POT_TOOLS.*invoked' stderr

AUTOMAKE_run 0 -Wno-error
grep 'POTS.*AM_POT_TOOLS.*invoked' stderr

cp configure.in.bak configure.in
cat >> configure.in << 'END'
AM_POT_TOOLS
AC_OUTPUT
END

$ACLOCAL

# Check that there is no warning any more.

AUTOMAKE_run 0 -Werror
