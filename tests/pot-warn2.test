# Check that when the POTS primary is used, the _SOURCES variable must be
# defined, otherwise a warning occurs.

. ./defs || Exit 1

set -e

cat > Makefile.am << 'END'
locale_POTS = posub/foo-bar.pot
END

cat >> configure.in << 'END'
AM_POT_TOOLS
AC_OUTPUT
END

$ACLOCAL

# Check that there is a warning about the missing _SOURCES variable.

AUTOMAKE_fails -Werror
grep 'posub_foo_bar_pot_SOURCES' stderr

AUTOMAKE_run 0 -Wno-error
grep 'posub_foo_bar_pot_SOURCES' stderr

cat >> Makefile.am << 'END'
posub_foo_bar_pot_SOURCES =
END

# Check that there is no warning any more.

$AUTOMAKE -Werror

:
