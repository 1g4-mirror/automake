# Check that Automake can emit code that work round the inability of
# some make implementations to automatically chain suffix rules.
# See automake bug#7824 and bug#7670.

. ./defs || Exit 1

cat >> configure.ac <<'END'
AC_PROG_CC
AC_OUTPUT
END

cat > Makefile.am <<'END'
bin_PROGRAMS = foo
foo_SOURCES = foo.e
.e.d:
      (echo 'int main (void)' && echo '{' && cat $<) > $@
.d.c:
      (cat $< && echo '}') > $@
CLEANFILES = foo.d foo.c
END

echo 'return 0' > foo.e

$ACLOCAL
$AUTOMAKE
$AUTOCONF
./configure

$MAKE
$MAKE distcheck

$MAKE clean

cat >> Makefile <<'END'
foo.c: foo.d
foo.d: foo.e
END

$MAKE

:
