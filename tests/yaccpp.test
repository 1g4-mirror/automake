# Test to make sure Yacc + C++ is supported.
# Please keep this is sync with sister test lexcpp.test.

. ./defs || Exit 1

set -e

cat >> configure.in << 'END'
AC_PROG_CXX
AC_PROG_YACC
END

cat > Makefile.am << 'END'
bin_PROGRAMS = foo bar baz qux
foo_SOURCES = foo.y++
bar_SOURCES = bar.ypp
baz_SOURCES = baz.yy
qux_SOURCES = qux.yxx
END

$ACLOCAL
$AUTOMAKE -a

sed -e 's/^/ /' -e 's/$/ /' Makefile.in >mk
$FGREP ' foo.c++ ' mk
$FGREP ' bar.cpp ' mk
$FGREP ' baz.cc '  mk
$FGREP ' qux.cxx ' mk

:
